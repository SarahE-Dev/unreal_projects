<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Projects" %>
  <% content_for :subtitle, "List of projects" %>

  <!-- Title and Button Row -->
  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl text-gray-800">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg" %>
  </div>

  <!-- Projects Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @projects.each do |project| %>
      <a href="<%= project_path(project) %>" class="bg-white rounded-lg shadow-lg overflow-hidden block">
        <div class="relative">
          <img src="<%= project.image_url %>" alt="<%= project.title %>" class="w-full object-cover aspect-ratio-square" />
          <div class="absolute top-0 left-0 right-0 bottom-0 bg-gradient-to-t from-black opacity-60"></div>
        </div>
        <div class="p-5">
          <h2 class="text-xl font-semibold text-gray-800"><%= project.title %></h2>
          <p class="text-gray-600 text-sm mt-2 line-clamp-3"><%= project.description %></p>
          <p class="text-gray-500 text-xs mt-2">By: <%= project.user.email %></p>
        </div>
      </a>
    <% end %>
  </div>
</div>
