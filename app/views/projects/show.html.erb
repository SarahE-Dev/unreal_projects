<div class="mx-auto overflow-auto md:w-2/3 w-full flex flex-col items-center bg-gradient-to-br from-purple-700 via-purple-500 to-pink-500 py-8 px-6 rounded-lg shadow-lg">
  <!-- Notification Message -->
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Project Details -->
  <div class="w-full">
    <h2 class="text-3xl font-bold text-white mb-4"><%= @project.title %></h2>
    <p class="text-white mb-4"><%= @project.description %></p>

    <!-- Project Image -->
    <% if @project.image_url.present? %>
      <div class="relative mb-6">
        <img src="<%= @project.image_url %>" alt="<%= @project.title %>" class="w-full h-64 object-cover rounded-lg mx-auto" />
      </div>
    <% else %>
      <div class="p-6 text-center text-gray-500">No image available</div>
    <% end %>

    <!-- Project URL -->
    <p class="text-sm text-white mb-4">
      <strong class="text-gray-200">Project URL:</strong>
      <%= link_to @project.project_url, @project.project_url, target: "_blank", class: "text-purple-200 hover:text-purple-400" %>
    </p>

    <!-- Admin Controls (If the user is an admin) -->
    <% if current_user&.admin? %>
      <div class="flex justify-start gap-4 mt-4">
        <%= link_to "Edit this project", edit_project_path(@project), class: "py-2 px-4 bg-purple-800 text-white font-semibold rounded-lg hover:bg-purple-700 transition-colors duration-200" %>
        <%= button_to "Destroy this project", @project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' }, class: "py-2 px-4 bg-purple-800 text-white font-semibold rounded-lg hover:bg-purple-700 transition-colors duration-200" %>
      </div>
    <% end %>

    <!-- Back to Projects Button -->
    <div class="mt-6">
      <%= link_to "Back to projects", projects_path, class: "py-2 px-4 bg-gradient-to-r from-purple-800 to-pink-500 text-white font-semibold rounded-lg hover:bg-purple-700 transition-colors duration-200" %>
    </div>
  </div>
</div>


